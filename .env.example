# ===========================================
# SParking - Smart Parking Management System
# Environment Configuration
# ===========================================

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=SParking

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/sparking?schema=public"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-min-32-characters-long"

# WebSocket (Socket.IO)
NEXT_PUBLIC_SOCKET_URL=https://your-domain.com

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# SMS Gateway (optional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (optional)
STORAGE_PROVIDER=local
# For S3:
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=sparking-uploads

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Email Provider (console, resend, sendgrid, smtp)
EMAIL_PROVIDER=console
EMAIL_FROM=Sparking <noreply@sparking.app>

# Resend (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=your-resend-api-key

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# MSG91 SMS (India)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=SPARKN
MSG91_TEMPLATE_ID=your-template-id

# AI Pipeline Configuration
AI_PIPELINE_ENABLED=true
AI_PIPELINE_DEVICE=CPU
AI_PIPELINE_CONFIDENCE_THRESHOLD=0.5

# MQTT (for AI pipeline communication)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=sparking/detection

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com
TRUSTED_PROXIES=1

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=
